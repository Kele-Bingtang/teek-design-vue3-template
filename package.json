{
  "name": "kbt-vue3-template",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.5.1",
  "description": "Kbt Admin 后台管理系统",
  "author": "YoungKbt <2456019588@qq.com>",
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "packages/*",
    "template"
  ],
  "scripts": {
    "template": "pnpm -C template",
    "cloc": "NODE_OPTIONS=--max-old-space-size=4096 cloc . --exclude-dir=node_modules",
    "clean:cache": "rm -rf node_modules && rm -rf .eslintcache && yarn install",
    "prepare": "husky install",
    "lint:lint-staged": "lint-staged -c ./.husky/lintstagedrc.js",
    "lint:stylelint": "stylelint \"**/*.{vue,css,scss,postcss,less}\" --fix",
    "lint:prettier": "prettier --write  \"src/**/*.{js,ts,json,tsx,css,less,scss,vue,html,md}\"",
    "lint:eslint": "eslint --max-warnings 0  \"{src,mock,build}/**/*.{vue,js,ts,tsx}\" --fix",
    "lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:stylelint",
    "release": "standard-version",
    "release-major": "standard-version --release-as major",
    "release-minor": "standard-version --release-as minor",
    "release-patch": "standard-version --release-as patch",
    "release-as": "standard-version --release-as",
    "release-prerelease": "standard-version --prerelease",
    "cz": "git add . && git-cz",
    "czp": "git add . && git-cz && git push"
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@template/components": "workspace:*",
    "@template/constants": "workspace:*",
    "@template/directives": "workspace:*",
    "@template/hooks": "workspace:*",
    "@template/i18n": "workspace:*",
    "@template/request": "workspace:*",
    "@template/static": "workspace:*",
    "@template/styles": "workspace:*",
    "@template/utils": "workspace:*"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "autoprefixer": "^10.4.20",
    "cloc": "^2.11.0",
    "commitizen": "^4.3.1",
    "cssnano": "^7.0.6",
    "cz-git": "^1.11.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-linter-browserify": "^9.17.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "postcss": "^8.4.49",
    "postcss-html": "^1.7.0",
    "postcss-import": "^16.1.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.83.0",
    "standard-version": "^9.5.0",
    "stylelint": "^16.12.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^14.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.7.2",
    "vite-plugin-eslint": "^1.8.1",
    "vue-eslint-parser": "^9.4.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "standard-version": {
    "skip": {
      "bump": true,
      "commit": true,
      "tag": true
    }
  }
}
